{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <br>
    <h1>User index</h1>
    <br>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Email</th>
            <th>MotDePasse</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.password }}</td>
                {#<td>{{ dump(user.roles) }}</td>#}
                {#<td>{{ user.roles }}</td>#}
                <td>{{ user.roles|join(', ') }}</td>
                <td>
                    <a class="btn btn-warning" href="{{ path('user_show', {'id': user.id}) }}">Voir</a>
                    {#<button type="button" class="btn btn-primary">Normal</button>#}
                    <a class="btn btn-primary" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucune informations</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('user_new') }}">Nouveau</a>
{% endblock %}

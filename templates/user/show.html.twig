{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Courriel</th>
                <td>{{ user.courriel }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ user.telephone }}</td>
            </tr>
            <tr>
                <th>DateNaissance</th>
                <td>{{ user.dateNaissance ? user.dateNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>MotDePasse</th>
                <td>{{ user.motDePasse }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-1">
            <a class="btn btn-secondary" href="{{ path('user_index') }}">Retour</a>
        </div>
        <div class="col-md-1">
            <a class="btn btn-primary" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
        </div>
        <div class="col-md-1">
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

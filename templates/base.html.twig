    <!-- Links -->
    <ul class="navbar-nav">
        <div class="col-md-10">&nbsp</div>
        <div class="col-md-12">
            <a href="#" class="text-white">Les conditions de vente</a><span class="ig-footer-separator">|</span>
            <a href="#" class="text-white">Paiement sécurisé</a><span class="ig-footer-separator">|</span>

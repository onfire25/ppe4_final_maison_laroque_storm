{% extends 'base.html.twig' %}
{% block title %}Liste des produits{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row mb-4">
            <div class="col-12 text text-center">
                Liste des produits
            </div>
        </div>
        <div class="row">
            <div class="col-2"></div>
            {% for unePresentation in lesPresentations %}
                <div class="col-2">
                    <div class="card bg-light mb-3" style="max-width: 18rem;">
                        <div class="card-header">
                            <p><h4><a href="{{ path('presenter_show', {id: unePresentation.id, slug: unePresentation.slug}) }}">{{ unePresentation.idProduit.libelle }}</a></h4></p>
                            {#<p><h4>{{ unePresentation.idProduit.libelle }}</h4></p>#}
                            <p><div class="col-md-2"><img src="{{ unePresentation.idImage.chemin }}" width="150px"></div></p>
                        </div>
                        <div class="card-body">
                            <p>Prix : {{ unePresentation.idProduit.prixht }} â‚¬</p>
                            <p>En stock : {{ unePresentation.idProduit.stock }}</p>
                            {#<p>{{ unePresentation.idProduit.description }}</p>#}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <br>
        <div class="row">
            <div class="pagination" style="margin: auto">
                {{ knp_pagination_render(lesPresentations) }}
            </div>
        </div>
    </div>
{% endblock %}